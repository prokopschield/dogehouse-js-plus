{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"strict": true,
		"importHelpers": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules"
	]
}
